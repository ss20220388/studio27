---
interface Kurs {
    id: number;
    naziv: string;
    opis: string;
    cena: number;
    trajanje: number;
    slikaUrl: string;
}

const { kurs } = Astro.props as { kurs: Kurs };
import Java from "../assets/sta-je-java.jpg";
import Spring from "../assets/images.png";
import React from "../assets/react.png";
import type { ImageMetadata } from "astro";

let slika: ImageMetadata;

if (kurs.naziv.includes("Java")) {
    slika = Java;
} else if (kurs.naziv.includes("Spring")) {
    slika = Spring;
} else if (kurs.naziv.includes("React")) {
    slika = React;
} else {
    slika = Java; // fallback
}
---

<section
    class="shadow-md bg-white rounded-xl p-6 hover:shadow-xl transition duration-300 cursor-pointer w-full"
>
    <img
        src={slika.src}
        alt={kurs.naziv}
        class="w-full h-40 object-cover rounded-lg mb-4"
    />

    <h2 class="text-xl font-bold text-gray-800 mb-2">
        {kurs.naziv}
    </h2>

    <p class="text-gray-600 mb-3">
        {kurs.opis}
    </p>

    <p class="font-semibold text-indigo-600">
        {kurs.cena} RSD
    </p>

    <p class="text-sm text-gray-500">
        {kurs.trajanje} Äasova
    </p>
</section>
