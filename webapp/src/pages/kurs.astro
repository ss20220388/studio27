---
import KursComponents from "../components/KursComponents.astro";
import Layout from "../layouts/Layout.astro";

interface Kurs {
    id: number;
    naziv: string;
    opis: string;
    cena: number;
    trajanje: number;
    slikaUrl: string;
}

const data: Response = await fetch("http://localhost:8080/api/kursevi");
const kursevi: Kurs[] = await data.json();
---

<Layout title="Kursevi">
    <main class="p-8">
        <h1 class="text-3xl font-bold mb-8">Svi kursevi</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {kursevi.map((kurs) => (
                <KursComponents kurs={kurs} />
            ))}
        </div>
    </main>
</Layout>
