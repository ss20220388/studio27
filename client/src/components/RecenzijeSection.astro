---
type Student = {
  ime: string;
  prezime: string;
};

type Kurs = {
  id: number;
  naziv: string;
};

type Recenzija = {
  id: number;
  opis: string;
  ocena: number;
  datum: string;
  student: Student | null;
  kurs: Kurs | null;
};

let recenzije: Recenzija[] = [];
try {
  const res = await fetch("http://localhost:8080/api/recenzije"); // SSR: server-side fetch
  if (res.ok) {
    recenzije = await res.json();
  }
} catch (e) {
  console.error("Greška pri učitavanju recenzija:", e);
}
---

<section id="recenzije" class=" py-8 px-4 bg-black">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-32">
      <h2 class="text-4xl font-bold text-white" style="font-family: 'DM Serif Display', serif; mb-4">Šta kažu naši studenti</h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto">Pročitajte iskustva polaznika koji su završili naše kurseve</p>
    </div>

    {recenzije.length === 0 ? (
      <p class="text-center mb-16 text-gray-500 text-lg">Još uvek nema recenzija.</p>
    ) : (
      <div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6">
        {recenzije.map((recenzija) => {
          const ime = recenzija.student
            ? `${recenzija.student.ime} ${recenzija.student.prezime}`
            : "Anonimni korisnik";
          const inicijali = recenzija.student
            ? `${recenzija.student.ime?.charAt(0) || ""}${recenzija.student.prezime?.charAt(0) || ""}`
            : "?";

          return (
            <div class="p-6 bg-gray-900 border border-gray-800 rounded-2xl shadow-lg break-inside-avoid hover:border-indigo-500/50 transition-all duration-300">

              {/* Zvezde za ocenu */}
              <div class="flex gap-1 mb-4">
                {[1, 2, 3, 4, 5].map((star) => (
                  <svg
                    class={`w-5 h-5 ${star <= recenzija.ocena ? "text-yellow-400" : "text-gray-600"}`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>

              {/* Tekst recenzije */}
              <p class="text-gray-300 leading-relaxed mb-6">
                {recenzija.opis || "Bez komentara"}
              </p>

              {/* Korisnik i kurs */}
              <div class="flex items-center gap-4 pt-4 border-t border-gray-800">
                <div class="w-10 h-10 rounded-full bg-indigo-600 flex items-center justify-center text-white font-semibold text-sm shrink-0">
                  {inicijali}
                </div>
                <div class="flex-1 min-w-0">
                  <h6 class="text-white font-medium text-sm truncate">{ime}</h6>
                  {recenzija.kurs && (
                    <p class="text-indigo-400 text-xs truncate">{recenzija.kurs.naziv}</p>
                  )}
                </div>
              </div>

            </div>
          );
        })}
      </div>
    )}
  </div>
</section>