---
type Student = {
  ime: string;
  prezime: string;
};

type Rad = {
  idRad: number;
  idStudent: number;
  idKurs: number;
  slikaId: number;
  naziv: string;
  ime: string;
  prezime: string;
  url: string;
};

type Recenzija = {
  id: number;
  opis: string;
  ocena: number;
  datum: string;
  student: Student | null;
  kurs: {
    id: number;
    naziv: string;
    opis: string;
    slikaUrl: string;
  } | null;
};

/* ========================= */
/* UCITAVANJE RADOVA STUDENATA */
/* ========================= */

let radovi: Rad[] = [];

try {
  const resRadovi = await fetch("http://api.studio27.rs/api/radovi");
  if (resRadovi.ok) {
    radovi = await resRadovi.json();
  }
} catch (e) {
  console.error("Greška pri učitavanju radova:", e);
}

/* ========================= */
/* UCITAVANJE RECENZIJA */
/* ========================= */

let recenzije: Recenzija[] = [];

try {
  const resRec = await fetch("http://api.studio27.rs/api/recenzije");
  if (resRec.ok) {
    recenzije = await resRec.json();
  }
} catch (e) {
  console.error("Greška pri učitavanju recenzija:", e);
}

const radoviPrikaz = radovi.slice(0, 6);
---

<section id="recenzije" class="py-16 px-4 bg-black">
  <div class="max-w-7xl mx-auto">
    <!-- ========================= -->
    <!-- RADOVI STUDENATA -->
    <!-- ========================= -->

    <div class="mb-32">
      <h3 class="text-3xl font-bold text-white text-center mb-16">
        Pogledajte radove naših studenata
      </h3>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12">
        {
          radoviPrikaz.map((rad) => (
            <article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl h-[450px] group">
              <img
                src={`http://api.studio27.rs/api/uploaded-images${rad.url}`}
                alt={rad.naziv}
                class="absolute inset-0 h-full w-full object-cover transition duration-500 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-transparent" />
              <div class="absolute inset-0 flex flex-col items-center justify-center text-white text-center space-y-2">
                <h3 class="text-lg sm:text-xl md:text-2xl font-bold">
                  {rad.naziv}
                </h3>
                <p class="text-xs sm:text-sm md:text-base leading-relaxed">
                  {rad.ime} {rad.prezime}
                </p>
              </div>
            </article>
          ))
        }
      </div>
    </div>

    <!-- ========================= -->
    <!-- RECENZIJE -->
    <!-- ========================= -->

    <div class="text-center mb-20">
      <p class="text-gray-400 text-lg max-w-2xl mx-auto mt-4">
        Pročitajte iskustva polaznika koji su završili naše kurseve
      </p>
    </div>

    {
      recenzije.length === 0 ? (
        <p class="text-center text-gray-500 text-lg">
          Još uvek nema recenzija.
        </p>
      ) : (
        <div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6">
          {recenzije.map((recenzija) => {
            const ime = recenzija.student
              ? `${recenzija.student.ime} ${recenzija.student.prezime}`
              : "Anonimni korisnik";

            const inicijali = recenzija.student
              ? `${recenzija.student.ime?.charAt(0) || ""}${recenzija.student.prezime?.charAt(0) || ""}`
              : "?";

            return (
              <div class="p-6 bg-gray-800 border border-gray-800 rounded-2xl shadow-lg break-inside-avoid hover:border-gray-700 transition-all duration-300">
                <div class="flex gap-1 mb-4">
                  {[1, 2, 3, 4, 5].map((star) => (
                    <svg
                      class={`w-5 h-5 ${star <= recenzija.ocena ? "text-yellow-400" : "text-gray-600"}`}
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>

                <p class="text-gray-300 leading-relaxed mb-6">
                  {recenzija.opis || "Bez komentara"}
                </p>

                <div class="flex items-center gap-4 pt-4 border-t border-gray-800">
                  <div class="w-10 h-10 rounded-full bg-gray-700 flex items-center justify-center text-black font-semibold text-sm">
                    {inicijali}
                  </div>
                  <div>
                    <h6 class="text-gray-200 font-medium text-sm">{ime}</h6>
                    {recenzija.kurs && (
                      <p class="text-gray-400 text-xs">
                        {recenzija.kurs.naziv}
                      </p>
                    )}
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      )
    }
  </div>
</section>
